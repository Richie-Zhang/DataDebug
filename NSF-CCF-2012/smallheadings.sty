% Small headings
%
%% Allow raggedright section titles, and make lengthy titles singlespaced. 
%% Also reduce the size of the titles.  -Vas
%
\def\section{\@startsection {section}{1}{\z@}{-1.2ex plus -1ex minus -.2ex}
   {.5ex}{\raggedright\normalsize\bf\textsf}}
\def\subsection{\@startsection{subsection}{2}{\z@}{-1.2ex plus -1ex minus -.2ex}
   {1ex}{\raggedright\normalsize\bf\textsf}}
\def\subsubsection{\@startsection{subsubsection}{4}{\z@}{-1.2ex plus 
 -1ex minus -.2ex}{1ex}{\raggedright \normalsize\bf\textsf}}
